<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <ImageView
        android:id="@+id/fish_card_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unknown_fish" />

    <TextView
        android:id="@+id/fish_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/undiscovered_fish"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/fish_card_image"
        app:layout_constraintStart_toStartOf="@+id/fish_card_image"
        app:layout_constraintTop_toBottomOf="@+id/fish_card_image" />

    <TextView
        android:id="@+id/fish_card_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initializing_message"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/fish_card_title"
        app:layout_constraintStart_toStartOf="@+id/fish_card_title"
        app:layout_constraintTop_toBottomOf="@+id/fish_card_title" />
</android.support.constraint.ConstraintLayout>